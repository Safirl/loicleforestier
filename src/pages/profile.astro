<style lang="scss">
    @use "../styles/_variables";

    body {
        overflow: auto;
    }

    .container {
        display: flex;
        justify-content: center;
        gap: 10vw;
        width: 100%;
    }

    .leftColumn {
        display: flex;
        flex-direction: column;
        width: fit-content;
        gap: variables.$spacing-xxl;

        img {
            width: 30vh;
        }
    }

    .rightColumn {
        max-width: 500px;
    }

    #contact {
        display: flex;
        flex-direction: column;
        gap: variables.$spacing-m;
    }

    .contactInformations {
        display: flex;
        flex-direction: column;
        gap: variables.$spacing-xs;
        // width: 500px;
        li {
            font-size: variables.$font-size-s;
            font-family: variables.$font-normal;
            font-weight: 200;
        }
    }

    .footer {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: variables.$spacing-xl;
        padding-bottom: variables.$spacing-m;
        opacity: 50%;

        a {
            font-size: variables.$font-size-s;
            font-family: variables.$font-normal;
            font-weight: 200;
        }
    }

    //For touchscreen in portrait mode
    @media (orientation: portrait) {
        .container {
            flex-direction: column-reverse;
            gap: variables.$spacing-m;
        }

        .leftColumn {
            gap: variables.$spacing-xl;
        }

        .contactInformations {
            li {
                font-size: variables.$mobile-font-size-s;
            }
        }

        .footer a {
            font-size: variables.$mobile-font-size-s;
        }
    }
</style>